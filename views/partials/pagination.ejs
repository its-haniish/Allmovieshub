<section id="pagination_wrapper">
  <% if (page === 2) { %>
    <a href="#" onclick="changePage(<%= page - 1 %>)">&#8592; Previous</a>
    <a href="#" onclick="changePage(<%= page - 1 %>)"><%= page - 1 %></a>
  <% } %>

  <% if (page > 2) { %>
    <a href="#" onclick="changePage(<%= page - 1 %>)">&#8592; Previous</a>
    <a href="#" onclick="changePage(<%= page - 2 %>)"><%= page - 2 %></a>
    <a href="#" onclick="changePage(<%= page - 1 %>)"><%= page - 1 %></a>
  <% } %>

  <a href="#" onclick="changePage(<%= page %>)" class="active"><%= page %></a>

  <% if (movies.length === 20) { %>
    <a href="#" onclick="changePage(<%= page + 1 %>)"><%= page + 1 %></a>
    <a href="#" onclick="changePage(<%= page + 2 %>)"><%= page + 2 %></a>
    <a href="#" onclick="changePage(<%= page + 1 %>)">Next &#8594;</a>
  <% } %>
</section>

<script>
  function changePage(newPage) {
    // Get current URL
    const url = new URL(window.location.href);

    // Set the new page value
    url.searchParams.set('page', newPage);

    // Redirect to the new URL with updated page parameter
    window.location.href = url.toString();
  }
</script>
